@model IEnumerable<Sis457RoboticaRas.Models.Usuario>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid my-3">
    <div class="container">
        <h1>Usuarios</h1>

        <p>
            <a asp-action="Create">Crear Nuevo</a>
        </p>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        Usuario
                    </th>
                    <th>
                        Nombre Completo
                    </th>
                    <th>
                        Usuario Registro
                    </th>
                    <th>
                        Fecha Registro
                    </th>
                    <th>
                        Estado
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Usuario1)
                        </td>
                        <td>
                            @item.IdEmpleadoNavigation.Nombre
                            @item.IdEmpleadoNavigation.Apellidos
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UsuarioRegistro)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaRegistro)
                        </td>
                        <td>
                            @(item.Estado == 1 ? "Activo" : "Inactivo")
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdUsuario">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.IdUsuario">Ver</a> |
                            <a asp-action="Delete" asp-route-id="@item.IdUsuario">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>