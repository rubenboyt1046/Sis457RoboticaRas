@model IEnumerable<Sis457RoboticaRas.Models.Tienda>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid my-3">
    <div class="container">
        <h1>Ventas</h1>

        <p>
            <a asp-action="Create">Crear Nuevo</a>
        </p>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        Usuario
                    </th>
                    <th>
                        Cliente
                    </th>
                    <th>
                        Precio Unitario
                    </th>
                    <th>
                        Cantidad
                    </th>
                    <th>
                        Estado
                    </th>
                    <th>
                        Total
                    </th>
                    <th>
                        Fecha Venta
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalVenta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaVenta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UsuarioRegistro)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaRegistro)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdClienteNavigation.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.IdUsuario)
                        </td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>