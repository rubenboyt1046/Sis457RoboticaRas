@model Sis457RoboticaRas.Models.Ventum

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid my-3">
    <div class="container">
        <h1>Editar Venta</h1>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label class="control-label">Usuario</label>
                        <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select>
                        <span asp-validation-for="IdUsuario" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Cliente</label>
                        <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
                        <span asp-validation-for="IdCliente" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Total Venta</label>
                        <input asp-for="TotalVenta" class="form-control" />
                        <span asp-validation-for="TotalVenta" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Fecha Venta</label>
                        <input asp-for="FechaVenta" class="form-control" />
                        <span asp-validation-for="FechaVenta" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Usuario Registro</label>
                        <input asp-for="UsuarioRegistro" class="form-control" />
                        <span asp-validation-for="UsuarioRegistro" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Fecha Registro</label>
                        <input asp-for="FechaRegistro" class="form-control" />
                        <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Estado</label>
                        <input asp-for="Estado" class="form-control" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Volver</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
